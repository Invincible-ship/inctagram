+  }
+  const handleCloseDeleteModal = () => {
+    setIsOpenDeleteModal(false)
+  }
+
+  const onClickCloseHandler = () => {
+    onClose()
+    setIsOpenConfirmationModal(false)
+    setEditMode(false)
